<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="author" content="Ludzik">
    <meta name="description" content="CSGO Gambling website.">
    <meta name="keywords" content="CSGO, Cases, Upgrader, Roulette, Crash.">
    <title>EzSkins - Profile</title>
    <!-- @import "../link.kit" -->
</head>

<body>
    <!-- @import "../nav-cases.kit" -->
    <main class="main">
        <!-- @import "../lastdrops.kit" -->
        <section class="profile">
            <div class="wrapper">
                <div class="main__container">
                    <h2 class="section__title section__title--cases"><span class="section__title-bg">Your profile</span>
                    </h2>
                    <div class="profile__profile-box">
                        <div class="profile__user-info">
                            <img src="" alt="Profile Avatar" class="profile__avatar hexagon">
                            <div class="profile__text-box">
                                <p class="profile__name"></p>
                                <p class="profile__balance"></p>
                            </div>
                        </div>
                        <div class="profile__change">
                            <div class="profile__inputs-box">
                                <div class="profile__input-box">
                                    <input type="text" class="profile__input profile__input--avatar" placeholder="Avatar URL">
                                    <button class="profile__btn profile__btn--avatar ">change</button>
                                </div>
                                <div class="profile__input-box">
                                    <input type="text" class="profile__input profile__input--nickname" placeholder="Nickname">
                                    <button class="profile__btn profile__btn--nickname ">change</button>
                                </div>
                            </div>
                            <button class="profile__btn  profile__btn--red profile__btn--delete">delete account</button>
                        </div>
                    </div>
                    <div class="profile__items">
                        <div class="profile__items-buttons">
                            <p class="profile__items-title">Your items</p>
                            <div class="profile__items-right">
                                <p class="profile__items-price">Total value of skins: <span
                                        class="profile__items-value">00.00$</span></p>
                                <button class="profile__btn profile__btn--nomargin profile__btn--red profile__btn--sellall">sell all</button>
                            </div>
                        </div>
                        <div class="profile__items-box">

                        </div>
                        <div class="profile__dotsbox">
                        </div>
                        <button class="upgrader__list-btn upgrader__list-btn--left upgrader__list-btn--leftuser"
                            onclick="changePage(-1)"><i
                                class="fa-solid fa-arrow-left upgrader__list-btn-icon"></i></button>
                        <button class="upgrader__list-btn upgrader__list-btn--right upgrader__list-btn--rightuser"
                            onclick="changePage(1)"><i
                                class="fa-solid fa-arrow-right upgrader__list-btn-icon"></i></button>
                    </div>
                </div>
            </div>
        </section>
    </main>
    <!-- @import "../footer.kit" -->
    <script src="../dist/js/account.min.js"></script>
    <script src="../dist/js/profile.min.js"></script>
    <script src="../dist/js/last-drops.min.js"></script>
    <script src="../dist/js/balance.min.js"></script>
    <script src="../dist/js/script.min.js"></script>
</body>

</html>